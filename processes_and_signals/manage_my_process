#!/usr/bin/env bash
# This script writes "I am alive!" to /tmp/my_process every 2 seconds.
LOG_FILE="/tmp/my_process"

case "$1" in
    start)
        echo "manage_my_process started"
        # Simulate process writing to the log
        while true; do
            echo "I am alive!" >> "$LOG_FILE"
            sleep 2
        done &
        echo $! > /var/run/my_process.pid # Store the PID for later use
        ;;
    stop)
        if [ -f /var/run/my_process.pid ]; then
            kill $(cat /var/run/my_process.pid)
            rm /var/run/my_process.pid
            echo "manage_my_process stopped"
        else
            echo "No process found"
        fi
        ;;
    *)
        echo "Usage: $0 {start|stop}"
        exit 1
        ;;
esac
