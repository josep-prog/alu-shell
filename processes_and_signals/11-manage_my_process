#!/bin/bash

PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi
    nohup bash manage_my_process & echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        return 0  # Use return instead of exit to allow restart to proceed
    fi

    # Read PID from the file
    PID=$(cat "$PID_FILE")
    if kill -9 "$PID" > /dev/null 2>&1; then
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "Failed to stop manage_my_process with PID $PID"
    fi
}

restart() {
    stop  # Attempt to stop the process
    sleep 1  # Optional: give it a moment to ensure the process has stopped
    start  # Now try to start it again
    echo "manage_my_process restarted"
}

  
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
