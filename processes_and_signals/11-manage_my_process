#!/bin/bash
 
PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process started"
        return 1
    fi
    nohup bash manage_my_process & echo $! > "$PID_FILE"
    echo "manage_my_process is already running."
}

 
 
 
stop() {
    
    # Read PID from the file
    PID=$(cat "$PID_FILE")
    if kill -9 "$PID" > /dev/null 2>&1; then
        rm -f "$PID_FILE"
        echo "manage_my_process stopped" 
    else
        echo "Failed to stop manage_my_process with PID $PID"
    fi
}

restart() {
    if [ -f "$PID_FILE" ]; then
        echo "Stopping manage_my_process..."
        kill "$(cat "$PID_FILE")" 2>/dev/null
        if [ $? -eq 0 ]; then
            rm "$PID_FILE"
            echo "manage_my_process stopped."
        else
            echo "Failed to stop manage_my_process."
        fi
    else
        echo "No PID file found. Process not running."
    fi
    
    start
}


  
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
